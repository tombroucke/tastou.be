<?php

namespace Tastou\Fields;

use Tastou\Abstracts\Field;
use StoutLogic\AcfBuilder\FieldsBuilder;

class {{class_name}} extends Field
{
    protected function fields() : FieldsBuilder
    {
        $fieldsBuilder = new FieldsBuilder('{{slug}}', [
            'title' => __('{{name}}', 'tastou'),
        ]);

        $fieldsBuilder
            ->setLocation('post_type', '==', '{{slug}}');

        $fieldsBuilder
            ->addRepeater('items')
                ->addText('item')
            ->endRepeater();

        return $fieldsBuilder;
    }
}
